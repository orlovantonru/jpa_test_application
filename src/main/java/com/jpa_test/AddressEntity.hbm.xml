<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jpa_test.AddressEntity" table="ADDRESS" schema="PUBLIC" catalog="TEST">
        <id name="id">
            <column name="ID" sql-type="bigint(19)"/>
        </id>
        <property name="country">
            <column name="COUNTRY" sql-type="varchar(255)"/>
        </property>
        <property name="city">
            <column name="CITY" sql-type="varchar(255)"/>
        </property>
        <property name="street">
            <column name="STREET" sql-type="varchar(255)"/>
        </property>
        <property name="postIndex">
            <column name="POST_INDEX" sql-type="varchar(15)" length="15"/>
        </property>
    </class>
</hibernate-mapping>